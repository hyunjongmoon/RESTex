        "description" : "Delete a user by Id",
        "operationId" : "deleteById",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "description" : "ID of user",
          "required" : true,
          "type" : "long"
        } ],
        "responses" : {
          "400" : {
            "description" : "Invalid ID supplied"
          },
          "404" : {
            "description" : "User not found"
          }
        },
        "security" : [ {
          "user_auth" : [ "user.r",  "user.w" ]
