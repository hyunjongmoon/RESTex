{
  "host": "taiji.io",
  "service": "currency",
  "action": [
    {
      "name": "send",
      "version": "1.0.0",
      "handler": "SendCurrency",
      "scope": "t.w",
      "schema": {
        "title": "Send Currency",
        "type": "object",
        "properties": {
          "currency": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "toAddress": {
            "type": "string"
          },
          "amount": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          }
        },
        "required": [
          "currency",
          "address",
          "password",
          "toAddress",
          "amount",
          "unit"
        ]
      }
    },
    {
      "name": "balance",
      "version": "1.0.0",
      "handler": "GetBalance",
      "scope": "t.r",
      "schema": {
        "title": "Currency Balance",
        "type": "object",
        "properties": {
          "address": {
            "type": "string"
          }
        },
        "required": [
          "address"
        ]
      }
    },
    {
      "name": "transaction",
      "version": "1.0.0",
      "handler": "GetTransaction",
      "scope": "t.r",
      "schema": {
        "title": "Currency Transaction",
        "type": "object",
        "properties": {
          "address": {
            "type": "string"
          },
          "currency": {
            "type": "string",
            "enum": ["taiji"]
          }
        },
        "required": [
          "address",
          "currency"
        ]
      }
    }
  ]
}
